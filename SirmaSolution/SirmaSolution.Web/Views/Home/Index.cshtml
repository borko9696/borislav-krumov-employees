@{
    ViewData["Title"] = "Home Page";
}

@model List<SirmaSolution.Data.ViewModels.HomeViewModel>

<div class="container">
    <form method="post" enctype="multipart/form-data" asp-controller="UploadFiles" asp-action="Index">
        <div class="form-group">
            <label for="fileId">Upload File:</label>
            @if (Model.Count == 0)
            {
                <p style="color:red">Please choose file!</p>
            }
            <input type="file" class="form-control-file" name="file" id="fileId">
            <input type="submit" value="Upload" />
        </div>
    </form>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Employee ID</th>
                <th>Second Employee ID</th>
                <th>Project ID</th>
                <th>Days Worked Together</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var homeViewModel in Model)
            {
                <tr>
                    <td>@homeViewModel.FirstEmpoyeeId</td>
                    <td>@homeViewModel.SecondEmployeeId</td>
                    <td>@homeViewModel.ProjectId</td>
                    <td>@homeViewModel.DaysWorked</td>
                </tr>
            }
        </tbody>
    </table>
</div>
